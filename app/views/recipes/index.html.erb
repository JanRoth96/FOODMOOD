<!--put searchbar here-->
<div class="standart-container">
  <div class="searchbar-fm">
    <%= form_with url: recipes_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
                         params[:query],
                         class: "form-control border-0 bg-light font-size",
                         placeholder: "Search by recipe or ingre..." %>
      <button type="submit" class="search-btn">
        <i class="fa fa-search font-color"></i>
      </button>
    <% end %>
  </div>
</div>
<ul class="stack standard-container" data-controller="swinger">
  <%# move the next line to the controller %>
  <%# where("meal_type = ? AND cooking_time <= ?", params[:meal_type], params[:time]). %>
  <% @recipes.limit(20).each do |recipe| %>
    <li class="child" data-swinger-target="card">
      <%= render "shared/cards/dish",
                 name: recipe.name,
                 cuisine: recipe.cuisine_type,
                 time: recipe.cooking_time,
                 image: recipe.photo.key,
                 recipe: recipe %>
    </li>
  <% end %>
</ul>
